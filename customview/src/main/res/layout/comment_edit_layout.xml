<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <EditText
        android:id="@+id/fx_content_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|top"
        tools:hint="写个鼓舞士气的宣言吧~"
        android:background="@drawable/shape_stroke_corners"
        android:selectAllOnFocus="true"
        android:paddingTop="7dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="false"
        android:lineSpacingMultiplier="1.2"
        android:text=""
        android:textColor="#666666"
        android:textColorHint="#aaaaaa"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fx_content_edit"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingRight="13dp">

        <TextView
            android:id="@+id/fx_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/fa_c_999999"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/fx_count_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/20"
            android:textColor="@color/fa_c_999999"
            android:textSize="12sp"/>

    </LinearLayout>

</merge>